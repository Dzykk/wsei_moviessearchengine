<Window x:Class="Movie_Search_Engine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movie_Search_Engine"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" Foreground="#FF9D9ED1" OpacityMask="#FFF9F9F9" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Background="#FF008D95" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border>
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="images/126466-multimedia-collection/png/avatar.png" Width="16"/>
                        <Label Content="Movie Search" FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="16" Foreground="#FF2E2E31" />
                    </DockPanel>
                    
                    
                </Border>
                <Border Grid.Row="1">
                    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="images/126466-multimedia-collection/png/next-1.png"/>
                                    <Setter Property="Height" Value="auto"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Source" Value="images/126466-multimedia-collection/png/next.png"/>
                                            <Setter Property="Width" Value="105"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                
                            </Image.Style>
                            
                        </Image>
                       
                    </DockPanel>
                </Border>
            </Grid>


        </Border>
        <Border Grid.Column="0" Grid.Row="1" Background="#FF008D95" >
            <StackPanel >
                <Button Height="50" Style="{DynamicResource menuBtns}" HorizontalContentAlignment="Left">
                    <DockPanel Width="220" Margin="15,0,0,0">
                        <Image Source="images/126466-multimedia-collection/png/next.png" Width="32"/>
                        <Label Content="Sth" Foreground="White" FontSize="16"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menuBtns}">
                    <DockPanel Width="220" Margin="15,0,0,0">
                        <Image Source="images/126466-multimedia-collection/png/next.png" Width="32"/>
                        <Label Content="Sth" Foreground="White" FontSize="16"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menuBtns}">
                    <DockPanel Width="220" Margin="15,0,0,0">
                        <Image Source="images/126466-multimedia-collection/png/next.png" Width="32"/>
                        <Label Content="Sth" Foreground="White" FontSize="16"/>
                    </DockPanel>
                </Button>
                <Button Height="50" Style="{DynamicResource menuBtns}">
                    <DockPanel Width="220" Margin="15,0,0,0">
                        <Image Source="images/126466-multimedia-collection/png/next.png" Width="32"/>
                        <Label Content="Sth" Foreground="White" FontSize="16"/>
                    </DockPanel>
                </Button>
            </StackPanel>
            
        </Border>



        <Border Grid.Column="1" Grid.Row="0" Background="#FF008D95" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Background="White">
                    <DockPanel Width="80" HorizontalAlignment="Right" Margin="0,0,2,0">
                        <Button Content="__" Style="{DynamicResource miniBtns}" FontSize="12"/>
                        <Button Content="X"  Style="{DynamicResource miniBtns}" x:Name="btn_close" Click="btn_close_Click" FontSize="12"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
